/* *************** OUTPUT PINS *********************/
PIN 23  = !WE                     ; /*                                 */ 
PIN 22  = !OE                     ; /*                                 */ 
PIN 21  = !RAM_CS                 ; /*                                 */ 
PIN 20  = !ROM_CS                 ; /*                                 */ 
PIN 19  = IO1_CS               ; /*                                 */ 
PIN 18  = IO2_CS              ; /*                                 */ 


/* *************** LOCAL VARIABLES *****************/
FIELD Address = [A15..A6];

/* *************** LOGIC ***************************/

RAM            = Address:[0000..7FFF];
IO1_SHADOW     = Address:[0200..027F];
IO2_SHADOW     = Address:[0280..02FF];
ROM            = Address:[8000..FFFF];

WE        = CLK & !RW;
OE        = CLK & RW;
RAM_CS    = RAM & !(IO1_SHADOW # IO2_SHADOW);
ROM_CS    = ROM;
IO1_CS    = IO1_SHADOW;
IO2_CS    = IO2_SHADOW;
